@page "/news/create"
@using TrainzInfoShared.DTO.GetDTO
@inject NavigationManager Navigation
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

<h4>Новини</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <EditForm Model="@news" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <!-- Назва новини -->
            <div class="form-group">
                <label>Назва новини</label>
                <textarea id="editorName"></textarea>
            </div>

            <!-- Короткий опис (CKEditor) -->
            <div class="form-group mt-2">
                <label>Короткий опис</label>
                <textarea id="editorBase"></textarea>
            </div>

            <!-- Повний текст новини (CKEditor) -->
            <div class="form-group mt-2">
                <label>Повний текст новини</label>
                <textarea id="editorFull"></textarea>
            </div>

            <!-- Завантаження картинки -->
            <div class="form-group mt-2">
                <label>Завантажити картинку</label>
                <InputFile OnChange="HandleFileSelected" />
                @if (!string.IsNullOrEmpty(imagePreview))
                {
                    <div class="mt-2">
                        <img src="@imagePreview" alt="preview" width="150" class="img-thumbnail" />
                    </div>
                }
            </div>

            <!-- Кнопка створення -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Створити</button>
            </div>
        </EditForm>

        @if (!string.IsNullOrEmpty(errors))
        {
            <div class="alert alert-danger mt-3">
                <h5>Помилка збереження:</h5>
                <p>@errors</p>
            </div>
        }
    </div>
</div>

@code {
    private NewsDTO news = new NewsDTO();
    private string imagePreview;
    private string errors;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Ініціалізація CKEditor через JS Interop
            await JS.InvokeVoidAsync("initCKEditorForCreateNews", "editorBase", DotNetObjectReference.Create(this), "SetBaseNewsInfo");
            await JS.InvokeVoidAsync("initCKEditorForCreateNews", "editorFull", DotNetObjectReference.Create(this), "SetNewsInfoAll");
            await JS.InvokeVoidAsync("initCKEditorForCreateNews", "editorName", DotNetObjectReference.Create(this), "SetNewsName");
        }
    }

    [JSInvokable]
    public void SetNewsName(string value) => news.NameNews = value;
    [JSInvokable]
    public void SetBaseNewsInfo(string value) => news.BaseNewsInfo = value;

    [JSInvokable]
    public void SetNewsInfoAll(string value) => news.NewsInfoAll = value;

    private async Task HandleValidSubmit()
    {
        try
        {
            await CheckRoles();
            var result = await Http.PostAsJsonAsync("api/news/create", news);
            if (result.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                errors = await result.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            errors = ex.Message;
        }
    }

    private async Task CheckRoles()
    {
        if (AuthStateProvider is CustomAuthStateProvider customAuth)
        {
            // Перевірка стану авторизації на сервері
            await customAuth.CheckAuthenticationAsync();

            // Отримуємо ClaimsPrincipal
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated ?? false)
            {
                var email = user.Identity.Name;
                var roles = user.Claims
                                .Where(c => c.Type == ClaimTypes.Role)
                                .Select(c => c.Value)
                                .ToList();

                news.username = email;

            }
            else
            {

            }
        }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        var buffer = new byte[file.Size];
        await file.OpenReadStream().ReadAsync(buffer);
        imagePreview = $"data:{file.ContentType};base64,{Convert.ToBase64String(buffer)}";
        news.NewsImage = imagePreview;
        news.ImageMimeTypeOfData = file.ContentType;
    }
}
