@page "/news/edit/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<h1>Редагувати новину</h1>
<hr />

@if (news == null)
{
    <p>Завантаження даних...</p>
}
else
{
    <EditForm Model="@news" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label>Назва новини</label>
            <textarea @ref="editorNewsName"></textarea>
        </div>

        <div class="form-group mt-2">
            <label>Короткий опис</label>
            <textarea @ref="editorShortRef"></textarea>
        </div>

        <div class="form-group mt-2">
            <label>Повний текст</label>
            <textarea @ref="editorFullRef"></textarea>
        </div>

        <div class="form-group mt-2">
            <label>Завантажити картинку</label>
            <InputFile OnChange="HandleFileSelected" />
            @if (!string.IsNullOrEmpty(imagePreview))
            {
                <div class="mt-2">
                    <img src="@imagePreview" alt="preview" width="150" class="img-thumbnail" />
                </div>
            }
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Зберегти</button>
            <button type="button" class="btn btn-secondary" @onclick="GoBack">Назад</button>
        </div>

        @if (!string.IsNullOrEmpty(errors))
        {
            <div class="alert alert-danger mt-2">@errors</div>
        }
    </EditForm>

    if (errors != null)
    {
        <H3>"Помилка збереження, зверніться до адміністратора";</H3>
        <div class="alert alert-danger mt-2">
            <p>@errors</p>
        </div>
    }
}

@code {
    [Parameter] public int Id { get; set; }
    private NewsDTO news;
    private string errors;
    private string imagePreview;
    private ElementReference editorShortRef;
    private ElementReference editorFullRef;
    private ElementReference editorNewsName;
    private bool editorShortInitialized = false;
    private bool editorFullInitialized = false;
    private bool editoNameNewsInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            news = await Http.GetFromJsonAsync<NewsDTO>($"api/news/geteditnews/{Id}");
        }
        catch (Exception ex)
        {
            errors = ex.Message;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender) return;
        if (!editorShortInitialized && news != null)
        {
            await InitEditorsAsync();
        }

    }
    private async Task InitEditorsAsync()
    {
        var dotNetRef = DotNetObjectReference.Create(this);

        // Short description
        if (!editoNameNewsInitialized)
        {
            await JS.InvokeVoidAsync(
                "initCKEditorForEditNews",
                editorNewsName,
                dotNetRef,
                "SetNameNews",
                news?.NameNews ?? string.Empty);
            editoNameNewsInitialized = true;
        }

        // Short description
        if (!editorShortInitialized)
        {
            await JS.InvokeVoidAsync(
                "initCKEditorForEditNews",
                editorShortRef,
                dotNetRef,
                "SetBaseNewsInfo",
                news?.BaseNewsInfo ?? string.Empty);
            editorShortInitialized = true;
        }

        // Full text
        if (!editorFullInitialized)
        {
            await JS.InvokeVoidAsync(
                "initCKEditorForEditNews",
                editorFullRef,
                dotNetRef,
                "SetNewsInfoAll",
                news?.NewsInfoAll ?? string.Empty);
            editorFullInitialized = true;
        }
    }

    [JSInvokable]
    public void SetNameNews(string value) => news.NameNews = value;

    [JSInvokable]
    public void SetBaseNewsInfo(string value) => news.BaseNewsInfo = value;

    [JSInvokable]
    public void SetNewsInfoAll(string value) => news.NewsInfoAll = value;

    private async Task HandleValidSubmit()
    {
        try
        {
            var result = await Http.PostAsJsonAsync("api/news/edit", news);
            if (result.IsSuccessStatusCode)
                Navigation.NavigateTo("/");
            else
                errors = await result.Content.ReadAsStringAsync();
        }
        catch (Exception ex)
        {
            errors = ex.Message;
        }
    }
    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        var buffer = new byte[file.Size];
        await file.OpenReadStream().ReadAsync(buffer);
        imagePreview = $"data:{file.ContentType};base64,{Convert.ToBase64String(buffer)}";
        news.NewsImage = imagePreview;
        news.ImageMimeTypeOfData = file.ContentType;
    }
    private void GoBack() => Navigation.NavigateTo("/");
}
