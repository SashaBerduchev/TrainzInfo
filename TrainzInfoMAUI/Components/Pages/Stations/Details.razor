@page "/stations/details/{id:int}"
@using TrainzInfoShared.DTO.GetDTO
@inject NavigationManager Navigation
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

<h1 class="news-page-title">@stations?.Name</h1>

@if (stations != null)
{

    <div class="card news-detail-card shadow-lg mb-5 p-4">
        <div class="row g-4 align-items-start">
            <!-- Картинка -->
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(stations.StationImages))
                {
                    <img src="@stations.StationImages" class="img-fluid rounded news-detail-img" alt="@stations.Name" />
                }
                else
                {
                    <img src="/images/default-station.jpg" class="img-fluid rounded news-detail-img" alt="Станція" />
                }
            </div>

            <!-- Текстова частина -->
            <div class="col-md-8">
                <h3 class="mb-3 text-primary">@stations.Name</h3>
                <dl class="row mb-4">
                    <dt class="col-sm-3 fw-bold">Філія</dt>
                    <dd class="col-sm-9">@stations.UkrainsRailways</dd>

                    <dt class="col-sm-3 fw-bold">Місто</dt>
                    <dd class="col-sm-9">@stations.Citys</dd>

                    <dt class="col-sm-3 fw-bold">Область</dt>
                    <dd class="col-sm-9">@stations.Oblasts</dd>
                </dl>

                <!-- Кнопки -->
                <div class="d-flex flex-wrap gap-2 mt-3">
                    @if (IsAdmin)
                    {
                        <button class="btn btn-outline-primary btn-sm" @onclick="() => AddInfo()">Додати інформацію</button>
                        <button class="btn btn-outline-warning btn-sm" @onclick="() => EditStation(stations.id)">Редагувати</button>
                        <button class="btn btn-outline-success btn-sm" @onclick="() => AddImage(stations.id)">Додати картинку</button>
                        <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteStation(stations.id)">Видалити станцію</button>
                    }
                </div>
            </div>
        </div>

        <!-- Додаткова інформація -->
        <div class="mt-4">
            @((MarkupString)stations.BaseInfo)
            @((MarkupString)stations.AllInfo)
        </div>
    </div>

}
else
{
    <div class="d-flex justify-content-center align-items-center"
         style="min-height: 60vh;">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}


@if (schedule is null)
{
    <p>Відсутні дані...</p>
}
else
{
    <!-- Таблиця для великих екранів -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Номер поїзда</th>
                    <th>Прибуття</th>
                    <th>Відправлення</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in schedule)
                {
                    <tr>
                        <td style="font-size:18px">@item.NumberTrain</td>
                        <td>@item.TimeOfArrive</td>
                        <td>@item.TimeOfDepet</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Картки для мобільних -->
    <div class="d-block d-md-none">
        @foreach (var item in schedule)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                          Поїзд номер  @item.Train
                    </h5>
                    <p><b>Прибуття:</b> @item.TimeOfArrive</p>
                    <p><b>Відправлення:</b> @item.TimeOfDepet</p>
                </div>
            </div>
        }
    </div>
}


@if (ErrorMessage is not null)
        {
            <H3>"Помилка збереження, зверніться до адміністратора";</H3>
            <div class="alert alert-danger mt-2">
                        <p>@ErrorMessage</p>
            </div>
        }

<button class="btn btn-info mt-3" @onclick="Back">До списку станцій</button>
@code {
    [Parameter] public int Id { get; set; }
    private string ErrorMessage;
    private StationsDTO stations;
    private List<StationsShadulerDTO> schedule;
    private UserDto CurrentUser; // або отримуй з авторизації

    private bool IsAdmin = false;
    private bool CanComment = false;

    protected override async Task OnInitializedAsync()
    {
        // Завантажуємо новину
        stations = await Http.GetFromJsonAsync<StationsDTO>($"api/stations/details/{Id}");
        schedule = stations.stationsShadulers;
        // Приклад: завантаження поточного користувача та кількості коментарів
        // CurrentUser = await Http.GetFromJsonAsync<UserDto>("api/users/current");
        // CommentCount = await Http.GetFromJsonAsync<int>($"api/news/{Id}/comments/count");
        await CheckRoles();
    }

    private async Task CheckRoles()
    {
        if (AuthStateProvider is CustomAuthStateProvider customAuth)
        {
            // Перевірка стану авторизації на сервері
            await customAuth.CheckAuthenticationAsync();

            // Отримуємо ClaimsPrincipal
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated ?? false)
            {
                var email = user.Identity.Name;
                var roles = user.Claims
                                .Where(c => c.Type == ClaimTypes.Role)
                                .Select(c => c.Value)
                                .ToList();

                IsAdmin = roles.Contains("Admin") || roles.Contains("Superadmin") || roles.Contains("Publisher");

                if (user.Identity.Name != null)
                {
                    CanComment = true;
                }
            }
        }
    } 

    private void EditStation(int stationsId)
    {
        Navigation.NavigateTo($"/stations/edit/{stationsId}");
    }

    private void AddImage(int stationsId)
    {
        Navigation.NavigateTo($"/news/addimage/{stationsId}");
    }
    private void Back()
    {
        Navigation.NavigateTo($"/stations/");
    }

    private void AddInfo()
    {
        Navigation.NavigateTo($"/stationsinfo/create/{stations.Name}");
    }
    private async Task DeleteStation(int id)
    {
        if (!await Confirm("Ви впевнені що хочете видалити станцію?"))
            return;

        var response = await Http.PostAsync($"api/stations/delete/{id}", null);

        if (response.IsSuccessStatusCode)
            Navigation.NavigateTo("/stations");

        else
            ErrorMessage = "Помилка видалення: " + await response.Content.ReadAsStringAsync();
    }

    private async Task<bool> Confirm(string message)
    {
        return await Task.FromResult(await JS.InvokeAsync<bool>("confirm", message));
    }
}
