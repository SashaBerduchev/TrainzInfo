@model IEnumerable<TrainzInfo.Models.StationInfo>

@{
    ViewData["Title"] = "Станції";
}

<h1>Станції</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllInfo)
            </td>
            <td>
                <a asp-action="edit" asp-route-name="@item.Name">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="delete/{id}" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

