@model TrainzInfo.Models.LocomotiveBaseInfo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LocomotiveBaseInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayName("Назва серии");
                @Html.DropDownList("Name", ViewBag.Seria as SelectList)
            </div>
            <div class="form-group">
                @Html.DisplayName("Базовая информация");
                <input asp-for="BaseInfo" class="form-control" />
                <span asp-validation-for="BaseInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

