<!DOCTYPE html>
<html lang="en">
<head>
    <meta property="og:url" content="https://trainzinfo.com.ua">
    <meta property="og:type" content="website" />
    <meta property="og:image" content="@Url.Action("GetImage", "MainImages", new { name ="MainPhoto"})">
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:site_name" content="trainzinfo" />
    <meta property="og:title" content="TrainzInfo">
    <meta property="og:description" content="Залізничний сайт">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrainzInfo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="shortcut icon" href="/image/оо-300x197.ico" type="image/x-icon">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container d-flex justify-content-between align-items-center flex-wrap">

                <!-- Логотип та ліва частина -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="img-fluid rounded" style="max-height:80px;"
                         src="@Url.Action("GetImage", "MainImages", new { name = "MainPhoto" })" alt="Logo" />
                </a>

                <!-- Бургер кнопка -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Меню (кнопки по центру) -->
                <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                    <ul class="navbar-nav d-flex flex-wrap justify-content-center" style="gap:12px;">
                        <li class="nav-item">
                            <a class="btn btn-primary text-white" asp-controller="UkrainsRailways" asp-action="Index">Українська Залізниця</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary text-white" asp-controller="Trains" asp-action="Index">Графік поїздів</a>
                        </li>

                        @* Кнопки користувача *@
                        @if (ViewBag.user != null)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link fw-bold text-primary" asp-controller="Users" asp-action="Details" asp-route-id="@ViewBag.user.Id">
                                    @ViewBag.user.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger" asp-controller="Users" asp-action="Exit" asp-route-id="@ViewBag.user.Id">Вийти</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" asp-controller="Users" asp-action="Enter">Вхід</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" asp-controller="Users" asp-action="Create">Реєстрація</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container my-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Скрипти -->
    <!-- 1. jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- 2. jQuery UI -->
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>

    <!-- 3. Popper.js (для Bootstrap 4) -->
    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>

    <!-- 4. Bootstrap 4 JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/js/apiscript.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
<style>
    #btn {
        width: 240px;
        height: 40px;
        margin: 7px;
    }

    #btn1 {
        width: 130px;
        height: 40px;
        margin: 7px;
    }

    #btn2 {
        width: 80px;
        height: 40px;
        margin: 7px;
    }

    #btn3 {
        width: 110px;
        height: 40px;
        margin: 7px;
    }
</style>
