@model TrainzInfo.Models.TrainsShadule

@{
    ViewData["Title"] = Model.NameStation;
}

<h4>@Model.NameStation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                @Html.DisplayName("Назва станції")
                @Html.DropDownList("NameStation", ViewBag.stations as SelectList, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="NameStation" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Номер поїзда")
                <input asp-for="NumberTrain" class="form-control" />
                <span asp-validation-for="NumberTrain" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Прибуття")
                <input asp-for="Arrival" type="time" data-val="true" class="form-control" />
                <span asp-validation-for="Arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Відправлення")
                <input asp-for="Departure" type="time" data-val="true" class="form-control" />
                <span asp-validation-for="Departure" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Відстань")
                <input asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style>

