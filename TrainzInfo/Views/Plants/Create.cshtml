@model TrainzInfo.Models.Plants

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Plants</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayName("Назва");
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Місто");
                @Html.DropDownList("Adress", ViewBag.citys as SelectList, htmlAttributes: new { @class = "form-control" });
                <span asp-validation-for="Adress" class="text-danger"></span>
                <a class="btn btn-info" asp-controller="Cities" asp-action="Create">Добавить населенный пункт</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

