@model IEnumerable<TrainzInfo.Models.StationImages>

@{
    ViewData["Title"] = "Зображення станцій";
}


<!-- Наші стилі -->
<link rel="stylesheet" href="~/css/station-images.css" />

<div class="page-header">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn-create">+ Додати нове зображення</a>
</div>

<div class="container">
    <div class="station-grid">
        @foreach (var item in Model)
        {
            <div class="station-card">
                @if (item.Image != null)
                {
                    <img class="station-image" src="data:@item.ImageMimeTypeOfData;base64,@Convert.ToBase64String(item.Image)" alt="@item.Name" />
                }
                else
                {
                    <img class="station-image" src="/images/no-image.png" alt="No image" />
                }

                <div class="station-content">
                    <div class="station-name">@item.Name</div>
                    <div class="station-meta">@item.ImageMimeTypeOfData</div>

                    <div class="station-actions">
                        <a asp-action="Edit" asp-route-id="@item.id">Редагувати</a>
                        <a asp-action="AddImageForm" asp-route-id="@item.id">Додати фото</a>
                        <a asp-action="Details" asp-route-id="@item.id">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.id">Видалити</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
