@model TrainzInfo.Models.MetroLines

@{
    ViewData["Title"] = "Create";
}


<html>
<head>
    <title>Create</title>
    <style>
        body {
            background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
        }
    </style>
</head>
<body>

<h4>MetroLines</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Metro" class="control-label"></label>
                @Html.DropDownList("Metro", ViewBag.metro as SelectList, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Metro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameLine" class="control-label"></label>
                <input asp-for="NameLine" class="form-control" />
                <span asp-validation-for="NameLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountStation" class="control-label"></label>
                <input asp-for="CountStation" class="form-control" />
                <span asp-validation-for="CountStation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
