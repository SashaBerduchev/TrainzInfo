@model IEnumerable<TrainzInfo.Models.Locomotive>

@{
    ViewData["Title"] = "Локомотиви";
}

<h1 class="mb-4 text-center">Локомотиви</h1>

<div class="mb-3">
    @if (ViewBag.CurrentUser != null)
    {
        <a class="btn btn-info mb-2" asp-action="Create">Додати локомотив</a>
    }
</div>


<form method="get" class="row g-2 mb-3">
    <div class="col-12 col-md-3">
        @Html.DropDownList("Filia", ViewBag.filia as SelectList, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-12 col-md-3">
        @Html.DropDownList("Depot", ViewBag.depot as SelectList, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-12 col-md-3">
        @Html.DropDownList("Seria", ViewBag.seria as SelectList, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-12 col-md-3">
        <input type="submit" value="Відобразити" class="btn btn-info w-100" />
    </div>
</form>

<div class="mb-4">
    <a class="btn btn-secondary" asp-action="ClearFilter">Скинути фільтр</a>
</div>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="row g-0">
                    <div class="col-12 col-md-4">
                        <img class="img-fluid rounded-start"
                             src="@Url.Action("GetImage", "Locomotive", new { item.id })"
                             alt="Локомотив" />
                    </div>
                    <div class="col-12 col-md-5 p-3">
                        <h5>@item.Locomotive_Series.Seria №@item.Number</h5>
                        <p><b>Філія:</b> @item.DepotList.UkrainsRailway.Name</p>
                        <p><b>Депо:</b> @item.DepotList.Name</p>
                        <p><b>Область:</b> @item.DepotList.City.Oblasts.Name</p>
                        <p><b>Місто:</b> @item.DepotList.City.Name</p>
                        <p><b>Максимальна швидкість:</b> @item.Speed км/год</p>
                    </div>
                    <div class="col-12 col-md-3 d-flex flex-column justify-content-center p-3">
                        <a class="btn btn-outline-info mb-2" asp-action="Details" asp-route-id="@item.id">Детальна інформація</a>
                        <a class="btn btn-outline-success mb-2"
                           asp-controller="UserLocomotivePhotos"
                           asp-action="Index"
                           asp-route-name="@item.Seria"
                           asp-route-number="@item.Number">Фото користувачів</a>

                        @if (ViewBag.user != null && (ViewBag.user.Role == "Publisher" || ViewBag.user.Role == "Superadmin" || ViewBag.user.Role == "Admin"))
                        {
                            <a class="btn btn-outline-primary mb-2" asp-action="edit" asp-route-id="@item.id">
                                Редагувати @item.Seria - @item.Number
                            </a>
                        }

                        @if (ViewBag.user != null && (ViewBag.user.Role == "Superadmin" || ViewBag.user.Role == "Admin"))
                        {
                            <a class="btn btn-outline-warning mb-2" asp-action="AddImageForm" asp-route-id="@item.id">Додати зображення</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.id">Видалити</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @* Попередня кнопка *@
        @if (ViewBag.PageIndex > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageIndex - 1)">Попередня</a>
            </li>
        }

        @{
            int startPage = Math.Max(1, ViewBag.PageIndex - 3);
            int endPage = Math.Min(ViewBag.TotalPages, ViewBag.PageIndex + 3);

            if (startPage > 1)
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="1">1</a></li>
                if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            for (int i = startPage; i <= endPage; i++)
            {
                if (i == ViewBag.PageIndex)
                {
                    <li class="page-item active"><span class="page-link">@i</span></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                }
            }

            if (endPage < ViewBag.TotalPages)
            {
                if (endPage < ViewBag.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@ViewBag.TotalPages">@ViewBag.TotalPages</a></li>
            }
        }

        @* Наступна кнопка *@
        @if (ViewBag.PageIndex < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageIndex + 1)">Наступна</a>
            </li>
        }
    </ul>
</nav>



<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style>
