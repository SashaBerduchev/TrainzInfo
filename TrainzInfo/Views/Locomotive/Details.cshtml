@model TrainzInfo.Models.Locomotive

@{
    ViewData["Title"] = @Model.Seria;
}


<div class="container my-4">

    <hr />

    <!-- Блок зображення та основної інформації -->
    <div class="bg-light p-3 rounded">
        <div class="row g-3 align-items-center">
            <!-- Зображення локомотива -->
            <div class="col-12 col-md-5 text-center">
                <img class="img-thumbnail" style="max-width:100%; height:auto;"
                     src="@Url.Action("GetImage", "Locomotive", new { Model.id })" />
            </div>

            <!-- Інформація про локомотив -->
            <div class="col-12 col-md-7 bg-light p-3 rounded">
                <h4> @Html.DisplayName(Model.Seria + " - " + Model.Number)</h4>
                <p>Максимальна швидкість: @Html.DisplayName(Model.Speed.ToString())</p>
                <p>Місто прописки: @Html.DisplayName(Model.DepotList.City.Name)</p>
                <p>Депо прописки: @Html.DisplayName(Model.DepotList.Name)</p>
            </div>
        </div>
    </div>

    <!-- Кнопка редагування додаткової інформації -->
    @if (ViewBag.user != null && (ViewBag.user.Role == "Publisher" || ViewBag.user.Role == "Superadmin" || ViewBag.user.Role == "Admin"))
    {
        <div class="mt-3 text-center">
            <a class="btn btn-info w-100 w-md-auto mb-2" target="_blank"
               asp-controller="Electrick_Lockomotive_Info" asp-action="Edit" asp-route-idname="@Model.Seria">
                Редагувати додаткову інформацію @Model.Seria
            </a>
        </div>
    }

    <!-- Додаткова інформація про локомотив -->
    <div class="mt-4">
        <p class="fs-5">@ViewBag.base_info</p>
        <p class="fs-5 mt-3">@ViewBag.allinfo</p>
    </div>

    <!-- Кнопки для супер-адміністратора -->
    @if (ViewBag.user != null && ViewBag.user.Role == "Superadmin")
    {
        <div class="mt-3 d-flex flex-wrap gap-2">
            <a class="btn btn-success w-100 w-md-auto" asp-action="Edit" asp-route-id="@Model.id">Редагувати</a>
            <a class="btn btn-success w-100 w-md-auto" asp-action="AddImageForm" asp-route-id="@Model.id">Додати зображення</a>
        </div>
    }

</div>

<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style>
