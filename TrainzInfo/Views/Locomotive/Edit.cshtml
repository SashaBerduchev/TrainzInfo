@model TrainzInfo.Models.Locomotive

@{
    ViewData["Title"] = "Редагувати"; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Locomotive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
                <div class="form-group">
                    @Html.DisplayName("Серія(наприклад ДС3, ЧС4)");
                    <div class="form-inline">
                        @Html.DropDownList("Seria", ViewBag.Seria as SelectList, htmlAttributes: new { @class = "form-control" })
                        <a class="btn btn-info" asp-controller="Locomotive_series" asp-action="Create">Додати Серію локомотиву</a>
                    </div>
                    <span asp-validation-for="Seria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.DisplayName("Номер");
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.DisplayName("Депо")
                    @Html.DropDownList("Depot", ViewBag.Depo as SelectList, htmlAttributes: new { @class = "form-control" })
                    <span asp-validation-for="Depot" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.DisplayName("Швидкість");
                    <input asp-for="Speed" class="form-control" />
                    <span asp-validation-for="Speed" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
