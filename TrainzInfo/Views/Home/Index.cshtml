@{
    ViewData["Title"] = "TrainzInfo";
}

@model IEnumerable<NewsInfo>

<div class="text-center">
    <h1 class="display-4">Ласкаво просимо на сайт TrainzInfo!</h1>

    <div class="maincardpage">
        <div class="main_text">
            Сайт ТреінзІнфо присвячується любителям залізничного транспорту...
        </div>

        <div class="btn_main_panel">
            <a class="btn btn-info btn_news" style="width:160px; margin:10px;" asp-controller="Locomotive" asp-action="Index">Локомотиви</a>
            <a class="btn btn-info btn_news" style="margin:10px; width:160px" asp-controller="ElectricTrains" asp-action="Index">Електропоїзди</a>
            <a class="btn btn-info btn_news" style="margin:10px;width:160px" asp-controller="DieselTrains" asp-action="Index">Дизель-поїзди</a>
            <a class="btn btn-info btn_news" style="margin:10px; width:160px" asp-controller="Stations" asp-action="IndexAll">Станції</a>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <input type="text" id="searchInput" class="form-control" style="max-width:400px; margin:auto;" placeholder="Пошук новин..." />
</div>

<div id="news-container">
    @await Html.PartialAsync("_NewsPartial", Model)
</div>

@section Scripts {
    <!-- jQuery (якщо ще не підключено у _Layout) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery UI для autocomplete -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <script>
        $(document).ready(function () {

            // ---------- AJAX пагінатор ----------
            $('#news-container').on('click', '.page-link', function (e) {
                e.preventDefault();
                var page = $(this).data('page');

                $.ajax({
                    url: '@Url.Action("Index", "Home")',
                    type: 'GET',
                    data: { page: page },
                    success: function (html) {
                        $('#news-container').html(html);
                        $('html, body').animate({ scrollTop: $('#news-container').offset().top }, 300);
                    },
                    error: function () {
                        alert('Помилка при завантаженні новин.');
                    }
                });
            });

            // ---------- jQuery UI Autocomplete ----------
            $("#searchInput").autocomplete({
                source: '@Url.Action("SearchSuggestions", "Home")', // серверний метод повертає JSON масив рядків
                minLength: 2,
                select: function (event, ui) {
                    // Коли користувач обрав підказку, можна перейти на сторінку новини
                    window.location.href = '/NewsInfoes/Details/' + ui.item.id;
                }
            });
        });
    </script>
}

<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style> 