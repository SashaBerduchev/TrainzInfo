@{
    ViewData["Title"] = "TrainzInfo";
}

@model IEnumerable<NewsInfo>

<div class="text-center">
    <h1 class="display-4">Ласкаво просимо на сайт TrainzInfo!</h1>

    <div class="maincardpage">
        <div class="main_text">
            Сайт ТреінзІнфо присвячується любителям залізничного транспорту, любителям поїздів, електричок, електовозів та тепловозів.
            Тут ви знайдете багато цікавої інформації про залізничний транспорт та новини з залізниці та транспорту
        </div>

        <div class="btn_main_panel">
            <a class="btn btn-info btn_news" style="width:160px; margin:10px;" asp-controller="Locomotive" asp-action="Index">Локомотиви</a>
            <a class="btn btn-info btn_news" style="margin:10px; width:160px" asp-controller="ElectricTrains" asp-action="Index">Електропоїзди</a>
            <a class="btn btn-info btn_news" style="margin:10px;width:160px" asp-controller="DieselTrains" asp-action="Index">Дизель-поїзди</a>
            <a class="btn btn-info btn_news" style="margin:10px; width:160px" asp-controller="Stations" asp-action="IndexAll">Станції</a>
        </div>
    </div>
</div>

<div class="infocont container mt-4">
    @foreach (var info in Model)
    {
        if (!string.IsNullOrWhiteSpace(info.NameNews))
        {
            <div class="basecont card shadow-sm mb-4 p-3">
                <div class="row">
                    <div class="col-md-4">
                        @if (info.NewsImage == null)
                        {
                            <img src="@info.Imgsrc" class="img-fluid rounded" alt="Новина">
                        }
                        else
                        {
                            <img class="img-thumbnail"
                                 src="@Url.Action("GetImage", "NewsInfoes", new { info.id })"
                                 alt="Зображення новини" />
                        }
                    </div>
                    <div class="col-md-8">
                        <div class="text-muted">@info.DateTime.ToString()</div>
                        <h3>@info.NameNews</h3>
                        <p>@info.BaseNewsInfo</p>
                        <a class="btn btn-info btn_news" asp-controller="NewsInfoes" asp-action="Details" asp-route-id="@info.id">Дивитися новину</a>

                        @if (ViewBag.user != null && (ViewBag.user.Role == "Superadmin" || ViewBag.user.Role == "Admin" || ViewBag.user.Role == "Publisher"))
                        {
                            <a class="btn btn-outline-info btn_news" asp-controller="NewsInfoes" asp-action="AddImageForm" asp-route-id="@info.id">Додати зображення</a>
                            <a class="btn btn-danger" asp-controller="NewsInfoes" asp-action="Delete" asp-route-id="@info.id">Видалити</a>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @* Попередня кнопка *@
        @if (ViewBag.PageIndex > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageIndex - 1)">Попередня</a>
            </li>
        }

        @{
            int startPage = Math.Max(1, ViewBag.PageIndex - 3);
            int endPage = Math.Min(ViewBag.TotalPages, ViewBag.PageIndex + 3);

            if (startPage > 1)
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="1">1</a></li>
                if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            for (int i = startPage; i <= endPage; i++)
            {
                if (i == ViewBag.PageIndex)
                {
                    <li class="page-item active"><span class="page-link">@i</span></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                }
            }

            if (endPage < ViewBag.TotalPages)
            {
                if (endPage < ViewBag.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@ViewBag.TotalPages">@ViewBag.TotalPages</a></li>
            }
        }

        @* Наступна кнопка *@
        @if (ViewBag.PageIndex < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageIndex + 1)">Наступна</a>
            </li>
        }
    </ul>
</nav>


