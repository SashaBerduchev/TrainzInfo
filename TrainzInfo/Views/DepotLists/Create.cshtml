@model TrainzInfo.Models.DepotList

@{
    ViewData["Title"] = "Створити депо";
}

<h1>Створити депо</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayName("Назва депо")
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Назва филии железной дороги")
                @*<label asp-for="UkrainsRailways" class="control-label"></label>*@
                @*<input asp-for="UkrainsRailways" class="form-control" />*@
                @Html.DropDownList("UkrainsRailways", ViewBag.UzRailways as SelectList, htmlAttributes: new { @class = "form-control" })
                
                <span asp-validation-for="UkrainsRailways" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Місто")
                <input type="text" id="cities" asp-for="City" placeholder="Почніть вводити назву міста" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
                <a class="btn btn-info" asp-controller="Cities" asp-action="Create">Додати населений пункт</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
    .DropDown{
        width:100px;
        height:50px;
    }
</style>
