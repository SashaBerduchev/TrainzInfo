@model IEnumerable<TrainzInfo.Models.DepotList>

@{
    ViewData["Title"] = "Список депо";
}

<div class="container my-4">
    <h1 class="text-center mb-3">Список депо</h1>
    <h2 class="text-center text-muted">@Html.DisplayName(ViewBag.Filia)</h2>

    @if (ViewBag.user != null)
    {
        if (ViewBag.user.Role == "Superadmin" || ViewBag.user.Role == "Admin" || ViewBag.user.Role == "Publisher")
        {
            <div class="mb-3 text-center">
                <a class="btn btn-info mx-2 mb-2" asp-action="Create">Додати</a>
                <a class="btn btn-warning mx-2 mb-2" asp-action="UpdateForce">Націоналізувати</a>
            </div>
        }
    }

    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
            <thead class="thead-light">
                <tr class="text-center">
                    <th>Назва</th>
                    <th>Філія</th>
                    <th>Станція</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.City != null)
                            {
                                <span class="fw-bold">@item.Name</span> <br />
                                <small class="text-muted">@item.City.Name</small>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.UkrainsRailway.Name)</td>
                        <td>
                            @if (item.City != null)
                            {
                                @Html.DisplayFor(modelItem => item.City.Name)
                            }
                        </td>
                        <td class="text-center">
                            <div class="d-flex flex-wrap justify-content-center gap-2">
                                @if (ViewBag.user != null)
                                {
                                    if (ViewBag.user.Role == "Superadmin" || ViewBag.user.Role == "Admin" || ViewBag.user.Role == "Publisher")
                                    {
                                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.id">Редагувати</a>
                                    }
                                }
                                @if (item.Locomotives != null && item.Locomotives.Count > 0)
                                {
                                    <a class="btn btn-info btn-sm" asp-controller="Locomotive" asp-action="IndexDepot" asp-route-id="@item.id">Локомотиви</a>
                                }
                                else if (item.ElectricTrains != null && item.ElectricTrains.Count > 0)
                                {
                                    <a class="btn btn-info btn-sm" asp-controller="ElectricTrains" asp-action="IndexDepot" asp-route-id="@item.id">Електрички</a>
                                }
                                else if (item.DieselTrains != null && item.DieselTrains.Count > 0)
                                {
                                    <a class="btn btn-info btn-sm" asp-controller="DieselTrains" asp-action="IndexDepot" asp-route-id="@item.id">Дизель-поїзди</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }

</style>
<style type="text/css">
    td {
        background: #fff; /* Цвет фона */
        padding: 5px; /* Поля в ячейках */
        opacity: 0.8; /* Полупрозрачность таблицы */
        filter: alpha(Opacity=50); /* Для IE */
        width 700;
        color: black;
        text-decoration: solid;
    }
</style>