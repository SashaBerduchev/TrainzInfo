@model TrainzInfo.Models.SuburbanTrainsInfo

@{
    ViewData["Title"] = "Моделі приміських поїздів";
}

<h1>Редагувати</h1>

<h4>@Model.Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                @Html.DisplayName("Модель")
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Общая информация")
                <textarea style="width:800px; height:500px" asp-for="BaseInfo" class="form-control"></textarea>
                <span asp-validation-for="BaseInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Подробная информация")
                <textarea style="width:800px; height:500px" asp-for="AllInfo" class="form-control"></textarea>
                <span asp-validation-for="AllInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

