@model IEnumerable<TrainzInfo.Models.SuburbanTrainsInfo>

@{
    ViewData["Title"] = "Моделі приміських поїздів";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Створити нову модель</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllInfo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
