@model IEnumerable<TrainzInfo.Models.StationsShadule>

@{
    ViewData["Title"] = "Розклад по станції";
}


<h1 class="text-center my-4">Розклад по станції @ViewBag.station</h1>

<div class="table-responsive d-none d-md-block mb-5">
    <table class="table table-striped table-bordered align-middle">
        <thead class="thead-dark">
            <tr>
                <th>Номер</th>
                <th>Час прибуття</th>
                <th>Час відправлення</th>
                <th class="text-center">Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NumberTrain</td>
                    <td>@item.TimeOfArrive</td>
                    <td>@item.TimeOfDepet</td>
                    <td class="text-center">
                        <a class="btn btn-info btn-sm" asp-controller="TrainsShadules" asp-action="Index" asp-route-id="@item.Train.id">
                            Розклад поїзда
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-block d-md-none">
    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title fw-bold">Поїзд № @item.NumberTrain</h5>
                <p class="card-text mb-1"><strong>Час прибуття:</strong> @item.TimeOfArrive</p>
                <p class="card-text mb-2"><strong>Час відправлення:</strong> @item.TimeOfDepet</p>
                <a class="btn btn-info btn-sm w-100" asp-controller="TrainsShadules" asp-action="Index" asp-route-id="@item.Train.id">
                    Розклад поїзда
                </a>
            </div>
        </div>
    }
</div>

<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style>
<style type="text/css">
    td {
        background-color: aliceblue; /* Цвет фона */
        position: center;
        padding: 5px; /* Поля в ячейках */
        opacity: 1.9; /* Полупрозрачность таблицы */
        filter: alpha(Opacity=50); /* Для IE */
        width: 700px;
        color: cornflowerblue;
        text-decoration: solid;
    }
</style>
