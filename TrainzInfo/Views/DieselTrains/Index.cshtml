@model IEnumerable<TrainzInfo.Models.DieselTrains>

@{
    ViewData["Title"] = "Дизель-поїзди";
}

<h1>Дизель-поїзди</h1>

@if (ViewBag.user != null)
{
    @if (ViewBag.user.Role == "Publisher" || ViewBag.user.Role == "Admin" || ViewBag.user.Role == "Superadmin")
    {
        <a class="btn btn-info" asp-action="Create">Створити</a>
    }
}
<form method="get">
    <div class="form-inline" style="position:relative; width:90%">
        @Html.DropDownList("Filia", ViewBag.filia as SelectList, htmlAttributes: new { @class = "form-control" })
        @Html.DropDownList("Oblast", ViewBag.oblast as SelectList, htmlAttributes: new { @class = "form-control" })
        @Html.DropDownList("Depo", ViewBag.depo as SelectList, htmlAttributes: new { @class = "form-control" })
        @Html.DropDownList("Model", ViewBag.model as SelectList, htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Відобразити" class="btn btn-info" />
    </div>
</form>
<div>
    <a class="btn btn-info" style="margin:10px" asp-action="ClearFilter">Скинути фільтр</a>
</div>
@foreach (var item in Model)
{
    <div style="background-color:aliceblue; margin:20px; height:430px;">
        <div style="margin:20px; position:relative; top:20px">
            <div class="img">
                <img class="img-thumbnail" width="400" height="120"
                     src="@Url.Action("GetImage", "DieselTrains",
                                                new { item.Id })" />
        </div>
    </div>
    <div style="position:relative; left:460px; top:-230px; font-size:25px">
        <div>@Html.DisplayName("Назва поїзда: ") @Html.DisplayFor(modelItem => item.SuburbanTrainsInfo.Model)</div>
        <div>@Html.DisplayName("Номер: ") @Html.DisplayFor(modelItem => item.NumberTrain)</div>
        <div>@Html.DisplayName("Депо: ") @Html.DisplayFor(modelItem => item.DepotList.Name)</div>
        <div>@Html.DisplayName("Філія: ") @Html.DisplayFor(modelItem => item.DepotList.UkrainsRailway.Name)</div>
        <div>@Html.DisplayName("Область: ") @Html.DisplayFor(modelItem => item.DepotList.City.Oblasts.Name)</div>
        <div>@Html.DisplayName("Місто: ") @Html.DisplayFor(modelItem => item.DepotList.City.Name)</div>
    </div>
    <div style="position:relative; left:50px; top:-200px; font-size:25px">
        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Детально</a>
        @if (ViewBag.user != null)
            {
                @if (ViewBag.user.Role == "Publisher" || ViewBag.user.Role == "Admin" || ViewBag.user.Role == "Superadmin")
                {
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                }
            }
        </div>
    </div>

}

<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style>