@model TrainzInfo.Models.DieselTrains

@{
    ViewData["Title"] = "Створити";
}

<h1>Створити дизель-поїзди</h1>

<body>

    <h4>DieselTrains</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.DisplayName("Модель")
                    @Html.DropDownList("Model", ViewBag.suburban as SelectList, htmlAttributes: new { @class = "form-control" })
                    @if (ViewBag.user != null)
                    {
                        if (ViewBag.user.Role == "Superadmin" || ViewBag.user.Role == "Admin")
                        {
                            <div>
                                <a class="btn btn-outline-info" target="_blank" asp-controller="SuburbanTrainsInfoes" asp-action="Create">Додати серію приміських поїздів</a>
                            </div>
                        }
                    }
                </div>
                <div class="form-group">
                    @Html.DisplayName("Номер")
                    <input asp-for="NumberTrain" class="form-control" />
                    <span asp-validation-for="NumberTrain" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.DisplayName("Деоо")
                    @Html.DropDownList("Depot", ViewBag.depot as SelectList, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style>
