@model TrainzInfo.Models.DieselTrains

@{
    ViewData["Title"] = Model.SuburbanTrainsInfo.Model;
}

<div class="container my-4">

    <!-- Основний блок зображення та інформації -->
    <div class="bg-light p-3 rounded">
        <div class="row g-3 align-items-center">
            <!-- Зображення дизель-поїзда -->
            <div class="col-12 col-md-5 text-center">
                <img class="img-thumbnail" style="max-width:100%; height:auto;"
                     src="@Url.Action("GetImage", "DieselTrains", new { Model.Id })" />
            </div>

            <!-- Інформація про поїзд -->
            <div class="col-12 col-md-7 bg-light p-3 rounded">
                <h4>Назва: @Html.DisplayName(Model.SuburbanTrainsInfo.Model)</h4>
                <p>Номер: @Html.DisplayName(Model.NumberTrain.ToString())</p>
                <p>Область: @Html.DisplayName(Model.DepotList.City.Oblasts.Name)</p>
                <p>Місто прописки: @Html.DisplayName(Model.DepotList.City.Name)</p>
                <p>Філія: @Html.DisplayName(Model.DepotList.UkrainsRailway.Name)</p>
                <p>Депо прописки: @Html.DisplayName(Model.DepotList.Name)</p>
            </div>
        </div>
    </div>

    <!-- Додаткова інформація -->
    <div class="mt-4">
        <p class="fs-5">@ViewBag.baseinfo</p>
        <p class="fs-5 mt-3">@ViewBag.allinfo</p>
    </div>

    <!-- Кнопки дій -->
    @* <div class="mt-3 d-flex flex-wrap gap-2">
        <a class="btn btn-success w-100 w-md-auto" asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a>
        <a class="btn btn-secondary w-100 w-md-auto" asp-action="Index">Повернутись до списку</a>
    </div> *@

</div>

