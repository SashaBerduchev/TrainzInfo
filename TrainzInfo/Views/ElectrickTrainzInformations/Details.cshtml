@model TrainzInfo.Models.ElectrickTrainzInformation

@{
    ViewData["Title"] = "Details";
}
    <header>
        <link rel="stylesheet" href="css/Body.css" />
    </header>
@if (Model == null)
{
    <meta http-equiv="refresh" content="600">
}
else
{
    <h1>@Model.Name</h1>

    <div>
        
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayName("Назва")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("Информация")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AllInformation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("Картинка")
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.Imgsrc" width="940" height="650"/>
            </dd>
        </dl>
        
    </div>
    <div>
        @if (Model == null)
        {
            <meta http-equiv="refresh" content="600">
        }
        else
        {
            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.id">Edit</a>
        }

        <a asp-action="Index">Back to List</a>
        
    </div>
}
<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }

</style>