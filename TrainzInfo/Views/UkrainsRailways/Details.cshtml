@model TrainzInfo.Models.UkrainsRailways

@{
    ViewData["Title"] = @Model.Name;
}

<h1 class="text-center mb-4">@Model.Name</h1>

<div class="d-flex flex-wrap justify-content-center mb-4">
    <a class="btn btn-info m-2" asp-controller="DepotLists" asp-action="Index" asp-route-uzname="@Model.id">
        Список депо
    </a>
    <a class="btn btn-success m-2" asp-controller="Stations" asp-action="Index" asp-route-filialsName="@Model.Name">
        Список всіх станцій
    </a>
    @if (ViewBag.user != null && ViewBag.user.Role == "Superadmin")
    {
        <a class="btn btn-info m-2" asp-action="AddImageForm" asp-route-name="@Model.Name">
            Додати зображення
        </a>
    }
</div>

<div class="card shadow-sm mb-4">
    <div class="row no-gutters align-items-center">
        <div class="col-12 col-md-5 text-center p-3">
            <img class="img-fluid rounded"
                 src="@Url.Action("GetImageDetails", "UkrainsRailways", new { Model.id })"
                 alt="@Model.Name" />
        </div>
        <div class="col-12 col-md-7 p-3">
            <p class="h5 mb-3">
                <b>Назва: </b> @Html.DisplayFor(model => model.Name)
            </p>
            <p class="h5">
                <b>Інформація: </b> @Html.DisplayFor(model => model.Information)
            </p>
        </div>
    </div>
</div>
