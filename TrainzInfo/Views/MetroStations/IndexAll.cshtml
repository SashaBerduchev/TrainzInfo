@model IEnumerable<TrainzInfo.Models.MetroStation>

@{
    ViewData["Title"] = "Метро станции";
}




<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageMimeTypeOfData)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img class="img-thumbnail" width="350" height="250"
                             src="@Url.Action("GetImage", "MetroStations",
                        new { item.id })" />
                    </td>
                    <td>
                        <a class="btn btn-light" asp-action="AddImageForm" asp-route-id="@item.id">Добавить картинку</a>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.id">Редагуввати</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Информация</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style>
