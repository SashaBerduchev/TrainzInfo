@model TrainzInfo.Models.MetroStation

@{
    ViewData["Title"] = "Добавить";
}


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>MetroStation</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.DisplayName("Назва станции")
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    @Html.DisplayName("Метро")
                    @Html.DropDownList("MetroName", ViewBag.metrolist as SelectList, htmlAttributes: new { @class = "form-control" })
                </div>
                <div>
                    @Html.DisplayName("Линия метро")
                    @Html.DropDownList("MetroLine", ViewBag.metrolines as SelectList, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Створити" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>


<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style>