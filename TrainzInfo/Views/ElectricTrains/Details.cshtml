@model TrainzInfo.Models.ElectricTrain

@{
    ViewData["Title"] = @Model.Name;
}


<div class="container my-4">

    <hr />

    <div class="bg-light p-3 rounded">
        <div class="row g-3 align-items-start">
            <!-- Зображення -->
            <div class="col-12 col-md-5 text-center">
                <img class="img-thumbnail" style="max-width:100%; height:auto;"
                     src="@Url.Action("GetImage", "ElectricTrains", new { Model.id })" />
            </div>

            <!-- Інформація про поїзд -->
            <div class="col-12 col-md-7 bg-light p-3 rounded">
                <h4>@Html.DisplayName("Назва: ") @Html.DisplayName(Model.Name) - @Html.DisplayName(Model.Model)</h4>
                <p>Максимальна швидкість: @Html.DisplayName(Model.MaxSpeed.ToString())</p>
                <p>Місто прописки: @Html.DisplayName(Model.City.Name)</p>
                <p>Депо прописки: @Html.DisplayName(Model.DepotList.Name)</p>
                <p>Побудовано: @Html.DisplayName(Model.CreatedTrain.Year.ToString())</p>
                <p style="max-width:450px;">Завод-виробник: @Html.DisplayName(Model.PlantCreate)</p>
                <p>Останній ремонт: @Html.DisplayName(Model.LastKvr.Year.ToString())</p>
                <p style="max-width:450px;">Завод який провів ремонт: @Html.DisplayName(Model.PlantKvr)</p>

                <!-- Додаткова інформація -->
                <div class="mt-3">
                    <p>@ViewBag.baseinfo</p>
                    <p>@ViewBag.allinfo</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Кнопки дій -->
    <div class="mt-3 d-flex flex-wrap gap-2">
        @if (ViewBag.user != null && (ViewBag.user.Role == "Publisher" || ViewBag.user.Role == "Admin" || ViewBag.user.Role == "Superadmin"))
        {
            <a class="btn btn-info w-100 w-md-auto" asp-action="AddImageForm" asp-route-id="@Model.id">Додати картинку</a>
            <a class="btn btn-info w-100 w-md-auto" target="_blank" asp-controller="SuburbanTrainsInfoes" asp-action="Edit" asp-route-name="@Model.Name">Змінити загальну інформацію</a>
            <a class="btn btn-info w-100 w-md-auto" target="_blank" asp-action="Edit" asp-route-id="@Model.id">Редагувати дані поїзда</a>
        }
    </div>

    <!-- Повернення -->
    <div class="mt-3">
        <a class="btn btn-secondary" asp-action="Index">Назад до списку</a>
    </div>

</div>

<style>
    body {
        background: url(https://klike.net/uploads/posts/2020-04/1586763576_18.jpg);
    }
</style>

