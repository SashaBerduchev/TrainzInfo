@model IEnumerable<TrainzInfo.Models.ElectricTrain>

@{
    ViewData["Title"] = "Електропоїзди";
}

<h1 class="mb-4 text-center">Електропоїзди</h1>
<head>
    <link rel="stylesheet" href="">
</head>
@if (ViewBag.user != null && ViewBag.user.Role == "Superadmin")
{
    <b>Кількість записів: @Model.Count().ToString()</b>
}

<p class="mb-3">
    @if (ViewBag.user != null && (ViewBag.user.Role == "Publisher" || ViewBag.user.Role == "Admin" || ViewBag.user.Role == "Superadmin"))
    {
        <a class="btn btn-info mb-2" asp-controller="ElectricTrains" asp-action="Create">Створити електропоїзд</a>
        <a class="btn btn-info mb-2" asp-controller="SuburbanTrainsInfoes" asp-action="Index">Моделі електропоїздів</a>
        <a class="btn btn-info mb-2" asp-action="UpdateIndex">Оновити дані</a>
    }
</p>

<form method="get" class="row g-2 mb-4">
    <div class="col-12 col-md-4">
        @Html.DropDownList("Depot", ViewBag.depots as SelectList, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-12 col-md-4">
        @Html.DropDownList("Name", ViewBag.name as SelectList, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-12 col-md-4">
        <input type="submit" value="Відобразити" class="btn btn-info w-100" />
    </div>
</form>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="row g-0">
                    <div class="col-12 col-md-4">
                        <img class="img-fluid rounded-start"
                             src="@Url.Action("GetImage", "ElectricTrains", new { item.id })"
                             alt="Електропоїзд" />
                    </div>

                    <div class="col-12 col-md-5 p-3">
                        <h5>@item.Name - @item.Model</h5>
                        <p><b>Депо:</b> @item.DepotList.Name</p>
                        <p><b>Філія:</b> @item.DepotList.UkrainsRailway.Name</p>
                        <p><b>Область:</b> @item.City.Oblasts.Name</p>
                        <p><b>Місто:</b> @item.City.Name</p>
                        <p><b>Максимальна швидкість:</b> @item.MaxSpeed км/год</p>
                    </div>

                    <div class="col-12 col-md-3 d-flex flex-column justify-content-center p-3">
                        <a class="btn btn-info mb-2" asp-action="Details" asp-route-id="@item.id">Детально</a>

                        @if (ViewBag.user != null && ViewBag.user.Role == "Superadmin")
                        {
                            <a class="btn btn-success mb-2" asp-action="Edit" asp-route-id="@item.id">Редагувати</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Видалити</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @* Попередня кнопка *@
        @if (ViewBag.PageIndex > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageIndex - 1)">Попередня</a>
            </li>
        }

        @{
            int startPage = Math.Max(1, ViewBag.PageIndex - 3);
            int endPage = Math.Min(ViewBag.TotalPages, ViewBag.PageIndex + 3);

            if (startPage > 1)
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="1">1</a></li>
                if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            for (int i = startPage; i <= endPage; i++)
            {
                if (i == ViewBag.PageIndex)
                {
                    <li class="page-item active"><span class="page-link">@i</span></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                }
            }

            if (endPage < ViewBag.TotalPages)
            {
                if (endPage < ViewBag.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@ViewBag.TotalPages">@ViewBag.TotalPages</a></li>
            }
        }

        @* Наступна кнопка *@
        @if (ViewBag.PageIndex < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageIndex + 1)">Наступна</a>
            </li>
        }
    </ul>
</nav>

<style>
    td {
        background: #6a5eff; /* Цвет фона */
        position: center;
        padding: 5px; /* Поля в ячейках */
        opacity: 1.9; /* Полупрозрачность таблицы */
        filter: alpha(Opacity=50); /* Для IE */
        width: 700px;
        color: white;
        text-decoration: solid;
    }
</style>
