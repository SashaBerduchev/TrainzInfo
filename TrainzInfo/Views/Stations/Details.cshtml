@model TrainzInfo.Models.Stations

@{
    ViewData["Title"] = Model.Name;
}
<meta property="og:image" content="@Url.Action("GetImage", "Stations",  new { Model.id })" />
<h1 class="text-center my-4">@Model.Name</h1>

<div class="container">

    <h4>Інформація</h4>
    <hr />

    <div class="row bg-light p-3 rounded mb-4">
        <!-- Основна інформація -->
        <div class="col-md-6 order-md-2 text-center mb-3">
            @if (Model.Image == null)
            {
                <img src="@Model.Imgsrc" class="img-fluid rounded" alt="Зображення станції">
            }
            else
            {
                <img class="img-fluid img-thumbnail"
                     src="@Url.Action("GetImageDetails", "Stations", new { Model.id })"
                     alt="Зображення станції">
            }
        </div>

        <div class="col-md-6 order-md-1">
            <p><strong>Місто:</strong> @Html.DisplayFor(model => model.City)</p>
            <p><strong>Філія:</strong> @Html.DisplayFor(model => model.Railway)</p>
            <p><strong>Область:</strong> @Html.DisplayFor(model => model.Oblast)</p>

            @if (Model.StationInfo != null)
            {
                <div class="mt-3">
                    <p>@Model.StationInfo.BaseInfo</p>
                </div>
            }

            <div class="mt-3 d-flex flex-wrap gap-2">
                <a class="btn btn-info" asp-controller="StationsShadules" asp-action="Index" asp-route-station="@Model.Name">
                    Розклад по станції
                </a>
                <a class="btn btn-warning" asp-controller="RailwayUsersPhotoes" asp-action="Index" asp-route-id="@Model.id">
                    Фотографії користувачів
                </a>
            </div>
        </div>
    </div>

    @if (Model.DopImgSrc != null || Model.DopImgSrcSec != null || Model.DopImgSrcThd != null)
    {
        <div class="row mb-4 g-3">
            @if (Model.DopImgSrc != null)
            {
                <div class="col-12 col-md-4 text-center">
                    <img src="@Model.DopImgSrc" class="img-fluid rounded" alt="Додаткове зображення">
                </div>
            }
            @if (Model.DopImgSrcSec != null)
            {
                <div class="col-12 col-md-4 text-center">
                    <img src="@Model.DopImgSrcSec" class="img-fluid rounded" alt="Додаткове зображення">
                </div>
            }
            @if (Model.DopImgSrcThd != null)
            {
                <div class="col-12 col-md-4 text-center">
                    <img src="@Model.DopImgSrcThd" class="img-fluid rounded" alt="Додаткове зображення">
                </div>
            }
        </div>
    }

    @if (ViewBag.user != null &&
        (ViewBag.user.Role == "Publisher" || ViewBag.user.Role == "Admin" || ViewBag.user.Role == "Superadmin"))
    {
        <div class="d-flex flex-wrap gap-2 mb-4">
            <a class="btn btn-info" target="_blank" asp-action="Edit" asp-route-id="@Model.id">Редагувати інформацію</a>
            <a class="btn btn-info" target="_blank" asp-controller="StationInfoes" asp-action="Create">Додати інформацію</a>
        </div>
    }

</div>


