@model IEnumerable<TrainzInfo.Models.Stations>

@{
    ViewData["Title"] = "Станції";
}
<link rel="stylesheet" href="~/css/station-ingo.css" />

<h1 class="mb-4 text-center">Станції</h1>
<h2 class="mb-3 text-center">@ViewBag.Filia</h2>

@if (ViewBag.user != null && ViewBag.user.Role == "Superadmin")
{
    <a class="btn btn-lg btn-outline-secondary mb-3" asp-controller="RailwayUsersPhotoes" asp-action="Index">
        Фотографії користувачів
    </a>
}

<p class="mb-3">
    @if (ViewBag.user != null && (ViewBag.user.Role == "Publisher" || ViewBag.user.Role == "Superadmin" || ViewBag.user.Role == "Admin"))
    {
        <a class="btn btn-dark" asp-action="Create">Додати</a>
    }
</p>

<form method="get" class="row g-2 mb-4">
    <div class="col-12 col-md-4">
        @Html.DropDownList("FilialsName", ViewBag.Filias as SelectList, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-12 col-md-4">
        @Html.DropDownList("Oblast", ViewBag.oblast as SelectList, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-12 col-md-4">
        @Html.DropDownList("NameStation", ViewBag.stations as SelectList, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-12 mt-2">
        <input type="submit" value="Відобразити" class="btn btn-info w-100" />
    </div>
</form>

<div class="mb-3">
    <a class="btn btn-secondary" asp-action="ClearFilter">Скинути фільтр</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="row g-0">
                    <!-- Картинка -->
                    <div class="col-12 col-md-4">
                        <img class=" station-img img-fluid rounded-start"
                             src="@Url.Action("GetImage", "StationImages", new { item.StationImages.id })"
                             alt="Станція" />
                    </div>

                    <!-- Інформація -->
                    <div class="col-12 col-md-5 p-3">
                        <h5>@item.Name</h5>
                        @if (item.Citys is not null)
                        {
                            <p><b>Область:</b> @item.Oblasts.Name</p>
                            <p><b>Місто:</b> @item.Citys.Name</p>
                            <p><b>Філія:</b> @item.UkrainsRailways.Name</p>
                        }
                    </div>

                    <!-- Кнопки -->
                    
                    <div class="col-12 col-md-3 d-flex flex-column justify-content-center p-3">
                        @if (item.StationsShadules != null)
                        {
                            <a class="btn btn-info mb-2 w-100" asp-controller="StationsShadules" asp-action="Index" asp-route-station="@item.Name">
                                Розклад по станції
                            </a>
                        }
                        <a class="btn btn-primary mb-2 w-100" asp-action="Details" asp-route-id="@item.id">
                            Інформація
                        </a>
                        @if (item.railwayUsersPhotos != null)
                        {
                            <a class="btn btn-warning mb-2 w-100" asp-controller="RailwayUsersPhotoes" asp-action="Index" asp-route-id="@item.id">
                                Фотографії користувачів
                            </a>
                        }
                        @if (User != null && (User.IsInRole("Superadmin") || User.IsInRole("Admin")))
                        {
                            <a class="btn btn-outline-info mb-2 w-100" asp-controller="StationImages" asp-action="AddImageForm" asp-route-id="@item.StationImages.id">
                                Додати зображення
                            </a>
                            <a class="btn btn-danger w-100" asp-action="Delete" asp-route-id="@item.id">
                                Видалити
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @* Попередня кнопка *@
        @if (ViewBag.PageIndex > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageIndex - 1)">Попередня</a>
            </li>
        }

        @{
            int startPage = Math.Max(1, ViewBag.PageIndex - 3);
            int endPage = Math.Min(ViewBag.TotalPages, ViewBag.PageIndex + 3);

            if (startPage > 1)
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="1">1</a></li>
                if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            for (int i = startPage; i <= endPage; i++)
            {
                if (i == ViewBag.PageIndex)
                {
                    <li class="page-item active"><span class="page-link">@i</span></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                }
            }

            if (endPage < ViewBag.TotalPages)
            {
                if (endPage < ViewBag.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@ViewBag.TotalPages">@ViewBag.TotalPages</a></li>
            }
        }

        @* Наступна кнопка *@
        @if (ViewBag.PageIndex < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.PageIndex + 1)">Наступна</a>
            </li>
        }
    </ul>
</nav>

